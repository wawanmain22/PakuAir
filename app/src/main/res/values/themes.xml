<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.PakuAir" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/primary</item>
    </style>

    <style name="Theme.PakuAir.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PakuAir.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PakuAir.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundColor">@color/input_background</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxCornerRadiusBottomEnd">24dp</item>
        <item name="boxCornerRadiusBottomStart">24dp</item>
        <item name="boxCornerRadiusTopEnd">24dp</item>
        <item name="boxCornerRadiusTopStart">24dp</item>
        <item name="hintTextColor">@color/primary</item>
    </style>
</resources>